@model MeetingMinuteViewDTO

<div class="card shadow mb-2 mt-2">
    <div class="card-body">
        <div style="max-height: 200px; overflow-y: auto;">
            <table class="table table-bordered" id="detailsTable">
                <thead class="table-light">
                    <tr>
                        <th>SL#</th>
                        <th>Product/Service</th>
                        <th>Quantity</th>
                        <th>Unit</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Details != null && Model.Details.Count>0)
                    {
                        for (int i = 0; i < Model.Details.Count; i++)
                        {
                            <tr>
                                <td>@(i + 1)</td>
                                <td>
                                    <input type="hidden" name="Details[@i].ProductServiceId" value="@Model.Details[i].ProductServiceId" />
                                    @Model.Details[i].ProductService?.Name
                                </td>
                                <td>
                                    <input name="Details[@i].Quantity" class="form-control" value="@Model.Details[i].Quantity" />
                                </td>
                                <td>
                                    <input name="Details[@i].Unit" class="form-control" value="@Model.Details[i].Unit" readonly />
                                </td>
                                <td><button type="button" class="btn btn-sm btn-warning edit-row">Edit</button></td>
                                <td><button type="button" class="btn btn-sm btn-danger delete-row">Delete</button></td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr class="no-data">
                            <td colspan="6" class="text-center">No matching records found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
